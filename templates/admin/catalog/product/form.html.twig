<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-body">
      <form action="{{ url }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="control-label required" for="title">
            Название
          </label>
          <input type="text"
                 id="title"
                 name="title"
                 required="required"
                 class=" form-control"
                 value="{{ product.title }}"
          >
        </div>

        <div class="form-group">
          <label class="control-label required" for="price">
            Цена
          </label>
          <input type="text"
                 id="price"
                 name="price"
                 required="required"
                 class=" form-control"
                 value="{{ product.price }}"
          >
        </div>

        <div class="form-group">
          <label class="control-label required" for="price">
            Изображение
          </label>
          {% if product.image is not empty %}
            <img src="{{ product.image }}" width="400"/>
          {% endif %}
          <input type="file"
                 id="image"
                 name="image"
                 class=" form-control"
          >
        </div>

        <div class="form-group">
          <label class="control-label required" for="categoryId">
            Категория
          </label>
          <select class="form-control" id="categoryId" name="categoryId">
            {% for category in categories %}
              <option value="{{ category.id }}" {{ product.categoryId == category.id ? 'selected' : '' }}>
                {{ category.title }}
              </option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label class="control-label required" for="brandId">
            Производитель
          </label>
          <select class="form-control" id="brandId" name="brandId">
            {% for brand in brands %}
              <option value="{{ brand.id }}" {{ product.brandId == brand.id ? 'selected' : '' }}>
                {{ brand.title }}
              </option>
            {% endfor %}
          </select>
        </div>

        <button type="submit" class="btn btn-success">Сохранить</button>
      </form>
    </div>
  </div>
</div>
